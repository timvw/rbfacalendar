  "version": "2.0.0",
  "tasks": [
    {
      "label": "run-staging-frontend",
      "type": "shell",
      "command": "make run-staging-frontend",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "build-backend",
      "type": "shell",
      "command": "make build-backend"
    }
  ]
}
